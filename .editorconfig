root = true

[*.{cs,vb}]
charset = utf-8-bom
end_of_line = crlf
insert_final_newline = true
indent_style = space
indent_size = 4

# C# specific
[*.cs]
# Use Allman-style braces for control blocks and types
dotnet_style_require_accessibility_modifiers = always:suggestion
csharp_new_line_before_open_brace = all
csharp_new_line_before_open_brace_for_types = true
csharp_new_line_before_open_brace_for_methods = true
csharp_new_line_before_open_brace_for_properties = true
csharp_new_line_before_open_brace_for_control_blocks = true
csharp_new_line_before_open_brace_for_anonymous_methods = true
csharp_new_line_before_open_brace_for_anonymous_types = true
csharp_new_line_before_open_brace_for_anonymous_control_flow = true

# Prefer braces for single-line statements
csharp_prefer_braces = always:warning

# Naming: methods PascalCase
dotnet_naming_rule.methods_should_be_pascalcase.severity = warning
dotnet_naming_rule.methods_should_be_pascalcase.symbols = methods
dotnet_naming_rule.methods_should_be_pascalcase.style = pascal_case_style

dotnet_naming_symbols.methods.applicable_kinds = method

dotnet_naming_style.pascal_case_style.capitalization = pascal_case

# File should contain only one top-level type (StyleCop rule SA1402)
# This will be reported by StyleCop analyzers; set severity
dotnet_diagnostic.SA1402.severity = warning

# Treat some analyzer rules as warnings by default
dotnet_analyzer_diagnostic.category-Style.severity = warning

# Fix whitespace formatting
csharp_style_var_elsewhere = false:suggestion

# SA rules adjustments per user:
# Disable SA1200 (using directives location) - user prefers other handling
dotnet_diagnostic.SA1200.severity = none

# Ignore SA1101 (prefix local calls with this)
dotnet_diagnostic.SA1101.severity = none

# Treat SA1501 (statement must not be on a single line) as error
dotnet_diagnostic.SA1501.severity = error

# Disable SA1633 (file header) and SA1309 (leading underscore on fields) per user
dotnet_diagnostic.SA1633.severity = none
dotnet_diagnostic.SA1309.severity = none

# End of .editorconfig
